<h1>Portfolio</h1>

<p><%= link_to 'New Portfolio Item', new_portfolio_path  %></p>

<% @portfolio_items.each do |portfolio_item| %>
  <h2><%= link_to portfolio_item.title, portfolio_item  %></h2>
  <p><%= portfolio_item.subtitle %></p>
  <p><%= portfolio_item.body %></p>
  <%= image_tag portfolio_item.thumb_image if !portfolio_item.thumb_image.nil? %>
  <p><%= link_to "Edit #{portfolio_item.title}", 
                 edit_portfolio_path(portfolio_item)  %></p>
<% end %>
